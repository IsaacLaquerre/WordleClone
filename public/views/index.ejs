<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wordle Clone</title>

    <link href="../assets/css/style.css" type="text/css" rel="stylesheet">
    <script src="../assets/js/default.js" defer></script>
    <script id="preJs" data-hash=<%=hash %>
        >
    </script>
</head>

<body id="body" onload="onLoad();">
    <h1 id="title">Wordle Clone</h1>
    <div id="results">
        <div class="close-icon" onclick="closeResults();">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path fill="var(--text-color)" d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path>
            </svg>
        </div>
        <div id="stats">
            <h2 id="status"></h2>
        </div>
        <div id="newWord">
            <div class="button-confirm" onclick="window.location.reload();">New word</div>
        </div>
    </div>
    <div id="game">
        <div id="guesses"></div>
        <div id="keyboard"></div>
    </div>
</body>

<script>
    function onLoad() {
        setUpTiles();
        setUpKeyboard();

        document.addEventListener("keydown", handleKeyDown);
        document.addEventListener("keyup", handleKeyUp);
    }
</script>

</html>